{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "declarationMap": true,
    /* Strict Type-Checking Options */
    "strict": true,
    /* Module Resolution Options */
    "esModuleInterop": true,
    "moduleResolution": "node",
    /* Source Map Options */
    "inlineSourceMap": true,
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* Monorepo Options */
    "composite": true
  }
}
